<header class="flex items-center flex-col flex-wrap px-5 pb-10">
  <a href="/" class="uppercase font-bold text-2xl hover:text-pink-400">Helen Vander Wende</a>
  {% set navPages = collections.all | eleventyNavigation %}
  <nav>
    <ul>
      {% for entry in navPages %}
        <li class="inline">
          <a href="{{ entry.url }}" class="uppercase text-sm py-1 px-2 inline-block hover:text-pink-400">
            {{ entry.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>
